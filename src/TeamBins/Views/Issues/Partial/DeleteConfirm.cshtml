@model TechiesWeb.TeamBins.ViewModels.DeleteIssueConfirmationVM
@using(Html.BeginForm("DeleteConfirm","Issues"))
{
<div class="modal-dialog">
        <div class="modal-content" style="width:500px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm your action</h4>
            </div>
            <div class="modal-body">

                <table class="tblform sleek modelTblFull">
                    <tr>
                        <td>The issue will be permenantly deleted and you won't be able to access it any more.If you want to keep the issue, but remove from the current list, you may archive it.</td>
                    </tr>                   
                </table>
                @Html.HiddenFor(x => x.ID)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>               
                <button type="button" id="btnArchiveIssue" class="btn btn-primary">Archive</button>
                <button type="button" id="btnDeleteIssue" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
}

