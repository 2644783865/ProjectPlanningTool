@{
    ViewBag.Title = "Team Members";
}
@model TechiesWeb.TeamBins.ViewModels.TeamVM
<h2>Members</h2>
@Html.ActionLink("Add", "Add", "Users", null, new { @class="popup"})
<table class="tblGrid">
    <thead>
        <tr>            
            <th>Name</th>
            <th>Email</th>
            <th>Joined date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members)
        {
            <tr>
                <td><img src="@member.AvatarHash">@member.Name</td>
                <td>@member.EmailAddress</td>
                <td>@member.JoinedDate</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(function () {

        $(document).on("click", "#btnAddMember", function (e) {
            e.preventDefault();
            $.post($(this).closest("form").attr("action"), $(this).closest("form").serialize(), function (res) {
                if (res.Status === "Success")
                    window.location.href = "@Url.Action("Index")";
                else
                    $("#msg").text(res.Message).addClass("error").slideDown(); $("#Name").focus();
            });
        });

    });
</script>
