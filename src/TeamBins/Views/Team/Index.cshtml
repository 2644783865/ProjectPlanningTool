@{
    ViewBag.Title = "Index";
}
@model TechiesWeb.TeamBins.ViewModels.TeamListVM
<h2>Teams</h2>
<table  class="table">
    <tr>
        <th>Team Name</th>
        <th>Member type</th>
    </tr>
@foreach(var team in Model.Teams)
{
  <tr>
      <td>
          @if (team.IsTeamOwner)
          {
            @Html.ActionLink(team.Name, "edit", "Team", new { id = team.ID }, new { @class="popup" })
          }
          else
          {
            <span>@team.Name</span>
          }
      </td>
      <td>
          @(team.IsTeamOwner?"Team Admin":"Team Member")

      </td>
  </tr>  
     

}
</table>
<script type="text/javascript">
    $(function () {
        $(document).on("click", "#btnSaveTeam", function (e) {
            e.preventDefault();
            $.post($(this).closest("form").attr("action"), $(this).closest("form").serialize(), function (res) {
                if (res.Status === "Success")
                    window.location.href = "@Url.Action("Index")";
            else
                    $("#msg").text(res.Message).addClass("error").slideDown(); $("#Name").focus();
            });
        });

    });
</script>