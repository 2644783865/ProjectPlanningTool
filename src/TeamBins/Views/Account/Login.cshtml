@model TechiesWeb.TeamBins.ViewModels.LoginVM
@{
    ViewBag.Title = "Join";
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

<div class="signUpContainer">
<h1>Login</h1>

<div class="divSignUp">
@using(Html.BeginForm())
{
<table class="tblEntry register">
    <tr>
        <td>
            @Html.ValidationSummary()
        </td>
    </tr>      
    <tr>
        <th>Your Email</th>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x=>x.Email)
        </td>
    </tr>
    <tr>
        <th>Password</th>
    </tr>
    <tr>
        <td>
            @Html.PasswordFor(x=>x.Password)
        </td>
    </tr>
    <tr>
        <td>
            <input type="submit" value="Login" />
        </td>
    </tr>
</table>

}
<div class="registerLinks">
    @Html.ActionLink("Forgot Password ?", "forgotPassword","Account") | 
    @Html.ActionLink("Register Account", "Join", "Account")
</div>
</div>
</div>